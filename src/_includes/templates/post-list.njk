<ul class="postList">
  {% asyncEach post in postslist %}
  <li class="post">
    <h2 class="post-title">
      <a href="{{ post.url }}" {% if post.url == url %} aria-current="page"{% endif %}>
        {{ post.title or post.url }}
      </a>
    </h2>

    {% set date = post.date %}
    {% set tags = post.tags %}
    {% set author = post.author %}
    {% set readingInfo = post.readingInfo %}
    {% include "templates/post-details.njk" %}
  </li>
{% endeach %}
</ul>
